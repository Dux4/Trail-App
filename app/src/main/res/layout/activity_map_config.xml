<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de Mapa"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/mapTypeGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/normalType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vetorial"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/satelliteType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Satélite"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modo de Navegação"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/navigationModeGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/northUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="North Up"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/courseUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Up"/>
    </RadioGroup>
</LinearLayout>